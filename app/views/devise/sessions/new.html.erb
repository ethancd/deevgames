<section class="devise group">
  <h2>Log In</h2>

  <%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
    <div class="group"><%= f.label :login, "Email or Username" %>
    <%= f.text_field :login, :autofocus => true %></div>

    <div class="group"><%= f.label :password %>
    <%= f.password_field :password %></div>

    <div class="group">
       <%= f.submit "Log In" %>
       <div class="remember_me"><%= f.check_box :remember_me %>
       <%= f.label :remember_me %></div>
    </div>


  <% end %>

  <%= render "devise/shared/links" %>
</section>