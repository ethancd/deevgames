<header class="layout">
  <div class="top-line group">
    <form class="log-in group" action="<%= session_url %>" method="post">
      <input type="hidden" name="authenticity_token"
        value="<%=form_authenticity_token%>">

      <label class="email-username">Email or Username
        <input type="text" name="user[username]">
      </label>

      <div class="password-box">
        <label>Password
          <input type="password" name="user[password]">
        </label>

        <br>

        <%= link_to "Forgot your password?", "#" %>
      </div>

      <input class="button" type="submit" value="LOG IN">
    </form>
  </div>

  <div class="second-line group">
    <h1>Deev Games</h1>

    <nav>
      <ul class="group">
        <li><a href="#">Ninja Tanks</a></li>
        <li><a href="#">Hex Strike <small>coming soon...</small></a></li>
        <li><a href="#">Blind Loyalty <small>coming soon...</small></a></li>
        <li><a href="#">Blog</a></li>
      </ul>
    </nav>
  </div>

</header>