<section class="content blog">
  <header>
    <h2>The Deev-elopment Blog</h2>
  </header>

  <section class="posts">
    <% @posts.reverse.each do |post| %>
      <article class="post">
        <header class="title">
          <a href="<%= post_url(post) %>" class="title">
            <h3><%= post.title %></h3>
          </a>
        </header>

        <figure>
          <a href="<%= post_url(post) %>" class="main-img">
            <img src="<%= post.image_url %>">
          </a>
        </figure>

        <% ps = post.body.split("\n") %>

        <% ps.each_with_index do |p, i| %>
          <% if i == 2 %>
            <aside><a href="<%= post_url(post)%>">More...</a></aside>
          <% elsif i > 2 %>
            <% next %>
          <% else %>
            <p><%= p %></p>
          <% end %>
        <% end %>


        <br>
        <aside>posted by
          <em><%= post.author.username %></em> at
          <time><%= post.created_at%></time>
        </aside>


        <%= link_to "Comments", "#{post_url(post)}#comments" %>
      </article>

      <% if user_signed_in? && current_user.admin %>
        <%= link_to "Edit this post", edit_post_url(post) %>
      <% end %>
    <% end %>
  </section>

  <% if user_signed_in? && current_user.admin %>
    <%= link_to "Add new post", new_post_url %>
  <% end %>
</section>