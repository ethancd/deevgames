<section class="devise">
  <h2>Sign Up</h2>

  <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>

    <div class="group"><%= f.label :username %>
    <%= f.text_field :username, :autofocus => true %></div>

    <div class="group"><%= f.label :email %>
    <%= f.email_field :email %></div>

    <div class="group avatar"><%= f.label :avatar, "Avatar (optional)" %>
    <%= f.file_field :avatar %> </div>

    <div class="group"><%= f.label :password %>
    <%= f.password_field :password %></div>

    <div class="group"><%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation %></div>

    <div class="group"><%= f.submit "Sign Up" %></div>
  <% end %>

  <%= render "devise/shared/links" %>
</section>

